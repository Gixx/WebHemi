{
  "name": "gixx/web-hemi",
  "type": "project",
  "version": "4.0.0",
  "description": "A simple blog engine",
  "homepage": "http://www.gixx-web.com",
  "keywords": ["blog", "engine", "cms"],
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "Gabor Ivan",
      "email": "gixx@gixx-web.com",
      "homepage": "http://www.gixx-web.com",
      "role": "Developer"
    }
  ],
  "autoload": {
    "psr-4": {
      "WebHemi\\": "./src/WebHemi"
    }
  },
  "autoload-dev": {
    "classmap": [
       "./tests/WebHemiTest/TestExtension/AssertArraysAreSimilarTrait.php"
    ],
    "psr-4": {
      "WebHemiTest\\": "./tests/WebHemiTest"
    }
  },
  "require": {
    "php": ">=7.1",
    "ext-mcrypt": "*",
    "guzzlehttp/psr7": "1.4.2",
    "symfony/dependency-injection": "3.3.13",
    "twig/twig": "2.4.4",
    "twig/extensions": "1.5.1",
    "katzgrau/klogger": "1.2.1",
    "erusev/parsedown": "1.6.4"
  },
  "require-dev": {
    "phpunit/phpunit": "6.4.4",
    "phpmd/phpmd": "2.6.0",
    "pdepend/pdepend": "2.5.0",
    "squizlabs/php_codesniffer": "3.1.1",
    "satooshi/php-coveralls": "1.0.2"
  },
  "scripts": {
    "check": [
      "@md",
      "@cs",
      "@cs-fix",
      "@test"
    ],
    "md": "vendor/bin/phpmd",
    "cs": "vendor/bin/phpcs",
    "cs-fix": "vendor/bin/phpcbf",
    "server": "php -S 0.0.0.0:8080 -t public/ public/index.php",
    "test": "vendor/bin/phpunit"
  }
}
