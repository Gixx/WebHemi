{
  "name": "gixx/web-hemi",
  "type": "project",
  "version": "4.0.0",
  "description": "A simple blog engine",
  "homepage": "http://www.gixx-web.com",
  "keywords": ["blog", "engine", "cms"],
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "Gabor Ivan",
      "email": "gixx@gixx-web.com",
      "homepage": "http://www.gixx-web.com",
      "role": "Developer"
    }
  ],
  "autoload": {
    "psr-4": {
      "WebHemi\\": "./src/WebHemi"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "WebHemiTest\\": "./tests/WebHemiTest"
    }
  },
  "require": {
    "php": ">=5.6.0",
    "nikic/fast-route": "^1.0",
    "guzzlehttp/psr7": "^1.3",
    "symfony/dependency-injection": "^3.1",
    "twig/twig": "^1.24"
  },
  "require-dev": {
    "phpunit/phpunit": "5.0.4",
    "phpmd/phpmd": "^2.4",
    "squizlabs/php_codesniffer": "^2.6",
    "satooshi/php-coveralls": "^1.0",
    "johnkary/phpunit-speedtrap": "^1.0"
  },
  "scripts": {
    "check": [
      "@md",
      "@cs",
      "@test"
    ],
    "md": "phpmd",
    "cs": "phpcs",
    "cs-fix": "phpcbf",
    "server": "php -S 0.0.0.0:8080 -t public/ public/index.php",
    "test": "phpunit"
  }
}
