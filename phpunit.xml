<phpunit
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/5.3/phpunit.xsd"
        convertErrorsToExceptions="true"
        convertNoticesToExceptions="true"
        convertWarningsToExceptions="false"
        beStrictAboutTestsThatDoNotTestAnything="false"
        beStrictAboutOutputDuringTests="true"
        beStrictAboutChangesToGlobalState="true"
        stopOnError="true"
        stopOnWarning="true"
        bootstrap="vendor/autoload.php">
    <testsuites>
        <testsuite name="all">
            <directory suffix=".php">tests/WebHemiTest</directory>
        </testsuite>
    </testsuites>
    <php>
        <const name="PHPUNIT_WEBHEMI_TESTSUITE" value="true"/>
    </php>
    <filter>
        <whitelist>
            <directory suffix=".php">src/WebHemi</directory>
            <exclude>
                <directory suffix=".php">src/WebHemi/Middleware/Action</directory>
                <directory suffix=".php">src/WebHemi/Middleware/Security</directory>
            </exclude>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html" target="build/logs/coverage"/>
        <log type="coverage-clover" target="build/logs/clover.xml"/>
    </logging>
    <listeners>
        <listener class="JohnKary\PHPUnit\Listener\SpeedTrapListener">
            <arguments>
                <array>
                    <element key="slowThreshold">
                        <integer>1000</integer>
                    </element>
                    <element key="reportLength">
                        <integer>10</integer>
                    </element>
                </array>
            </arguments>
        </listener>
    </listeners>
</phpunit>
