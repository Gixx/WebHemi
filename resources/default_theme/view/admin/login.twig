{% import '@WebHemi/macros/renderForm.twig' as _FORM %}
<!DOCTYPE html>
<html lang="en">
    <head>
        <base href="{%  if application.baseUri != '/' %} {{ application.baseUri }}{% endif %}/" />
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <meta name="mobile-web-app-capable" content="yes" />
        <meta name="apple-mobile-web-app-capable" content="yes" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1, user-scalable=0" />
        <meta name="desctiption" content="Authentication page of the WebHemi administration area." />
        <meta name="author" content="Gabor Ivan" />
        <meta name="subject" content="A simple blog engine">
        <meta name="copyright" content="Gixx-Web - http://www.gixx-web.com">
        <meta name="language" content="en">
        <title>{{ title|default('WebHemi Admin') }}</title>
        <link rel=”author” href=”https://plus.google.com/+Iv%C3%A1nG%C3%A1bor” rel="me"/>
        <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" />
        <link rel="stylesheet" href="{{ application.resourcePath }}/css/font.css" />
        <link rel="stylesheet" href="{{ application.resourcePath }}/css/login.css" />
    </head>
    <body>
        <div class="content">
            <h1>Webhemi admin</h1>
            {% if loginForm %}
                {{ _FORM.renderForm(loginForm) }}
            {% endif %}
        </div>
    </body>
</html>
