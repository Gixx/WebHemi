{% extends "admin-layout.twig" %}

{% block title %}{{ 'Control Panel - ' ~ site_title|default('WebHemi Admin') }}{% endblock %}

{% block header %}
    <a href="">Dashboard</a> > Control Panel
{% endblock %}

{% block menucontrol %}
        <li class="selected"><a href="control-panel">Control Panel</a></li>
{% endblock %}

{% block content %}
    <aside>
        <ul>
            {% if isAllowed('admin-control-panel-domains-list') %}
            <li{% if selectedPanel|default('') == 'domains' %} class="selected"{% endif %}><a href="control-panel/domains">Domains</a></li>
            {% endif %}
            {% if isAllowed('admin-control-panel-applications-list') %}
            <li{% if selectedPanel|default('') == 'applications' %} class="selected"{% endif %}><a href="control-panel/applications">Applications</a></li>
            {% endif %}
            {% if isAllowed('admin-control-panel-settings-list') %}
            <li{% if selectedPanel|default('') == 'settings' %} class="selected"{% endif %}><a href="control-panel/settings">Settings</a></li>
            {% endif %}
            {% if isAllowed('admin-control-panel-themes-list') %}
            <li{% if selectedPanel|default('') == 'themes' %} class="selected"{% endif %}><a href="control-panel/themes">Manage themes</a></li>
            {% endif %}
            {% if isAllowed('admin-control-panel-add-ons-list') %}
            <li{% if selectedPanel|default('') == 'add-ons' %} class="selected"{% endif %}><a href="control-panel/add-ons">Manage add-ons</a></li>
            {% endif %}
            {% if isAllowed('admin-control-panel-users-list') %}
            <li{% if selectedPanel|default('') == 'users' %} class="selected"{% endif %}><a href="control-panel/users">Manage users</a></li>
            {% endif %}
            {% if isAllowed('admin-control-panel-groups-list') %}
            <li{% if selectedPanel|default('') == 'groups' %} class="selected"{% endif %}><a href="control-panel/groups">Manage groups</a></li>
            {% endif %}
            {% if isAllowed('admin-control-panel-resources-list') %}
            <li{% if selectedPanel|default('') == 'resources' %} class="selected"{% endif %}><a href="control-panel/resources">Manage resources</a></li>
            {% endif %}
            {% if isAllowed('admin-control-panel-ploicies-list') %}
            <li{% if selectedPanel|default('') == 'policies' %} class="selected"{% endif %}><a href="control-panel/policies">Manage policies</a></li>
            {% endif %}
            {% if isAllowed('admin-control-panel-logs-list') %}
            <li{% if selectedPanel|default('') == 'logs' %} class="selected"{% endif %}><a href="control-panel/logs">View logs</a></li>
            {% endif %}
        </ul>
    </aside>
    <section>
        {% block panelcontent %}
        <h1>Control Panel</h1>
        {% endblock %}
    </section>
{% endblock %}
