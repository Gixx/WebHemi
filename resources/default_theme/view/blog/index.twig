{% extends "layout.twig" %}

{% block content %}
    <pre>POST: {{ postData }}</pre>
    <pre>SESSION: {{ session }}</pre>
    <pre>User: {{ user }}</pre>
    <pre>Group: {{ group }}</pre>
    <pre>User Policy: {{ policy }}</pre>
    <pre>Group Policy: {{ grouppolicy }}</pre>
    {% for blogPost in blogPosts %}
        <h2><a href="/view/{{ blogPost.slug|url_encode }}">{{ blogPost.title }}</a></h2>
        <p>On {{ blogPost.publishedAt.format('Y-m-d') }} by {{ blogPost.author.name }}</p>
        <p>{{ blogPost.content }}</p>
    {% endfor %}
    {{ _FORM.renderForm(loginForm) }}
{% endblock %}
