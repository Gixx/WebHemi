{% import '@WebHemi/macros/renderForm.twig' as _FORM %}
<div class="element input textarea{% if formElement.hasErrors() %} error{% endif %}">
    <label for="{{ formElement.getId() }}">{{ formElement.getLabel() }}</label>
    <textarea id="{{ formElement.getId() }}" name="{{ formElement.getName() }}"{{ _FORM.renderFormElementAttributes(formElement.getAttributes()) }}>{{ formElement.getValue() }}</textarea>
    {% if formElement.hasErrors() %}
        {{ _FORM.renderErrorBlock(formElement) }}
    {% endif %}
</div>
